#!/bin/bash

if pidof -o %PPID -s "$(basename "$0")"; then
	echo "[ $(date $(printenv DATE_FORMAT)) ] Rclone folder already mounted. Ignoring..."
else
    rclone_command="/usr/sbin/rclone --config /config/rclone.conf --uid $PUID --gid $PGID --umask 022 mount $REMOTE_PATH /drive-media $MOUNT_ARGS"

    echo "Mounting rclone folder: $rclone_command"

    exec $rclone_command
fi

exit 0
